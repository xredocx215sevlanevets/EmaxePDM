<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="30dp"
    android:background="@color/colorPrimary">

   <ImageView
       android:id="@+id/ivPerson"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:background="@drawable/ic_person_black_24dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="0dp"
       android:layout_marginBottom="50dp">
   </ImageView>

    <LinearLayout
        android:id="@+id/linearL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ivPerson">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_Tv"
            android:textSize="22sp"
            android:textColor="@color/cortexto"/>
        <EditText
            android:id="@+id/idEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_Tv"
            android:textSize="22sp"
            android:textColor="@color/cortexto">
        </TextView>
        <EditText
            android:id="@+id/idPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearL"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/corTextobotao"
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/login_btn"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/corTextobotao"
            android:id="@+id/btnSingIn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/register_btn"
            android:textSize="16dp"
            android:textAlignment="center">
        </Button>

    </LinearLayout>
</RelativeLayout>